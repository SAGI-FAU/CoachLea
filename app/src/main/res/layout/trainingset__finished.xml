<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".other_activities.Trainingset">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <LinearLayout
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:layout_width="360dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:background="@drawable/chat_bubble"
            >

            <TextView
                android:layout_marginVertical="20dp"
                android:layout_marginHorizontal="27dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/trainingset_already_done"
                android:textAllCaps="false"
                android:textSize="29dp"
                android:textStyle="bold"
                android:textColor="@color/dark_teal"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <ImageView
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:background="@drawable/lea"
                android:layout_marginRight="10dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_weight="2">
        <ImageButton
            android:id="@+id/home_trainingset"
            android:layout_gravity="center_horizontal"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/layout_round_button"
            android:foreground="@drawable/ic_home"/>

    </LinearLayout>


</LinearLayout>